{
  "swagger": "2.0",
  "info": {
    "title": "Flask Lendas API",
    "description": "API para registrar e logar usuários",
    "version": "1.0.0"
  },
  "basePath": "/",
  "schemes": ["http"],
  "paths": {
    "/register": {
      "post": {
        "summary": "Registrar um novo usuário",
        "description": "Registra um novo usuário com username, email e senha",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Registrado com sucesso!"
          },
          "400": {
            "description": "Usuário já registrado!"
          },
          "500": {
            "description": "Erro ao registrar usuário"
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "Login de usuário",
        "description": "Loga um usuário com username e senha",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Login"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Login realizado com sucesso!"
          },
          "401": {
            "description": "Usuário ou senha incorretos!"
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      }
    },
    "/protected": {
      "get": {
        "summary": "Rota protegida",
        "description": "Acesso apenas para usuários autenticados",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Usuário autenticado"
          },
          "401": {
            "description": "Não autorizado"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "Login": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    }
  }
}
